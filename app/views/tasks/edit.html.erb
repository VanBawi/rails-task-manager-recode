
<h1>Edit an existing task</h1>

<%= form_for :task, url: task_path(@task), method: :patch do |f| %>
<p >
  <%= f.label :title %> 
  <%= f.text_field :title %><br>
</p>

<p>
  <%= f.label :details %>
  <%= f.text_area :details %><br>
</p>

<p>
  <%= f.submit ({:class => 'btn btn-primary'})%>
  </p>
<% end %>


<%= link_to "Task List", tasks_path %>